<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/chinese_para"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:lineSpacingExtra="1dp"
        android:textColor="@color/text_common"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chinese_para"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/front_insert_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="1dp"
            android:text="前插空"
            android:textColor="@color/text_common"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/current_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/front_insert_space"
            android:includeFontPadding="false"
            android:lineSpacingExtra="1dp"
            android:text="删除"
            android:textColor="@color/text_common"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/front_merge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/current_delete"
            android:includeFontPadding="false"
            android:lineSpacingExtra="1dp"
            android:text="前合并"
            android:textColor="@color/text_common"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/book_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/front_merge"
            android:includeFontPadding="false"
            android:lineSpacingExtra="1dp"
            android:textColor="@color/text_common"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/en_seq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/book_id"
            android:includeFontPadding="false"
            android:lineSpacingExtra="1dp"
            android:textColor="@color/text_common"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/cn_seq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/en_seq"
            android:includeFontPadding="false"
            android:lineSpacingExtra="1dp"
            android:textColor="@color/text_common"
            android:textSize="15sp" />
    </RelativeLayout>
</RelativeLayout>