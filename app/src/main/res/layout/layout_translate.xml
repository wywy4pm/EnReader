<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_read"
    android:paddingTop="20dp">

    <RelativeLayout
        android:id="@+id/translate_top"
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/translate_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/img_close"
            android:text=""
            android:textColor="@color/text_common"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_close"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/translate_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_below="@+id/translate_top"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/translate_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="@color/text_common"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img_voice"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_toRightOf="@+id/translate_voice"
            android:src="@mipmap/ic_voice" />

    </RelativeLayout>

    <TextView
        android:id="@+id/translate_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/translate_center"
        android:layout_marginBottom="8dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="7dp"
        android:textColor="@color/text_common"
        android:textSize="14sp" />

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_common"
        android:layout_below="@+id/translate_detail"/>-->
</RelativeLayout>